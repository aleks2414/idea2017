<div id="fondi">
  <div class="backi">
    <h1><%=@workshop.nombre %></h1>
    <p><%=@workshop.frase %></p>
        <div id="contactito2">
        <%= form_for @contact do |f| %>
            <%= f.email_field :email, required: true, placeholder: "Déjanos tu correo electrónico" %>
              <div class="actions">
                  <%= f.submit "Quiero saber más", class: "button button_red" %>
              </div>
        <% end %>
        </div>
  </div>
</div>

<div class="container">
<div id="bannir">
  <div class="row">
    <div class="col-md-6">
        <%= image_tag @workshop.imagen.url %>
    </div>
    <div class="col-md-6">
        <h2>¿Qué me llevo del curso?</h2>

          <div class="que_me">
          <h3><%= @workshop.q_tit1 %></h3>
          <p><%= @workshop.q_des1 %></p>
          </div>

          <div class="que_me">
          <h3><%= @workshop.q_tit2 %></h3>
          <p><%= @workshop.q_des2 %></p>
          </div>

          <div class="que_me">
          <h3><%= @workshop.q_tit3 %></h3>
          <p><%= @workshop.q_des3 %></p>
          </div>

          <div class="que_me">
          <h3><%= @workshop.q_tit4 %></h3>
          <p><%= @workshop.q_des4 %></p>
          </div> <br>
      <% if @workshop.q_ic1.present? %>
        <%= link_to "Descargar PDF del taller", @workshop.q_ic1_url, class: "button button_red" %>
      <% end %>
    </div>
  </div>
</div>
</div>

<div class="container">
<div id="formato">
  <div class="row">
    <div class="col-sm-3 col-xs-6 next">
      <%= image_tag "icon_w-01.png" %>
      <h4>Fecha del taller:</h4>
      <p><%= @workshop.fecha.strftime("%x") %></p>
    </div>

    <div class="col-sm-3 col-xs-6 next">
      <%= image_tag "icon_w-02.png" %>
      <h4>Lugar del taller:</h4>
      <p><%= @workshop.lugar %></p>
    </div>

    <div class="col-sm-3 col-xs-6 next">
      <%= image_tag "icon_w-03.png" %>
      <h4>Horario del taller:</h4>
      <p><%= @workshop.horario %></p>
    </div>

    <div class="col-sm-3 col-xs-6 next">
      <%= image_tag "icon_w-04.png" %>
      <h4>Formato del taller:</h4>
      <p><%= @workshop.formato %></p>
    </div>
  </div>
</div>
</div>


<div id="numerosi">
  <div class="row">
    <div class="col-md-2 col-xs-6 col-md-offset-3">
      <%= image_tag "icon_w-05.png" %>
      <p><%=@workshop.num_meto %> metodologías</p>
    </div>

    <div class="col-md-2 col-xs-6">
      <%= image_tag "icon_w-06.png" %>
      <p><%=@workshop.num_dina %> dinámicas</p>
    </div>

    <div class="col-md-2 col-xs-6">
      <%= image_tag "icon_w-07.png" %>
      <p><%=@workshop.num_herra %> herramientas</p>
    </div>
  </div>
</div>

