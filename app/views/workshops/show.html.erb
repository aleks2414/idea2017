<div class="container">
<div id="general_info">
  <h2>Detalles de cómo tomar el taller:</h2>
  <p><%= @workshop.detalles.html_safe %></p>
</div>
</div>


<div class="container">
  <div id="facilitador">
    <div class="row">
      <div class="col-md-6">
        <%= image_tag @workshop.foto.url %>
      </div>
      <div class="col-md-6">
        <div id="fac_der">
          <h2><%=@workshop.expositor %></h2>
          <h5><%=@workshop.puesto %></h5>
          <p><%=@workshop.cv.html_safe %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="bloques">
<div class="container">
  <h1>Módulos del taller</h1>
  <hr>
  <% @workshop.blocks.each_with_index do |block, i| %>
    <div class="col-md-4">
      <div id="cerca">
        <h3><%=i+1%></h3>
        <h5 class="center"><%=block.title%></h5>
        <p><%=block.content%></p>
        <h4><%=block.duration%></h4>
      </div>
    </div>
  <% end %>
</div>
</div>

